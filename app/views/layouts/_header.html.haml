%nav.navbar.navbar-expand-md.navbar-dark.bg-dark
  %button.navbar-toggler
    .navbar-toggler-right{ 'aria-controls' => 'navbar-supported-content',
  'aria-expanded' => 'false',
  'aria-label' => 'Toggle navigation',
  'data-target' => '#navbar-supported-content',
  'data-toggle' => 'collapse',
  type: 'button' }
    %span.navbar-toggler-icon
  %a.navbar-brand{ href: root_path } FOREX
  .collapse.navbar-collapse#navbar-supported-content
    %ul.navbar-nav.mr-auto
      %li.nav-item
        = link_to 'home', root_path, class: 'nav-link'
    %ul.navbar-nav.my-2.my-lg-0
      %li.nav-item
        = link_to 'home', root_path, class: 'nav-link'
      %li.nav-item
        - if user_signed_in?
          = link_to t('.logout'), destroy_user_session_path,
          method: :delete, class: 'nav-link'
